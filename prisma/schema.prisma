// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgres"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model User {
  id         String   @id @default(cuid())
  username   String   @unique
  password   String
  recoveryPhrase String @default("")
  categories String[]
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  tiles      Tile[]

  @@map("users")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verificationtokens")
}

model Tile {
  id        String   @id @default(cuid())
  title     String
  category  String // This will be a separating column. for example mcould be poem, thought, meditation or other sort of wiritng noun
  user_id   String
  user      User     @relation(references: [id], fields: [user_id], onDelete: Cascade)
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([user_id])
  @@map("tiles")
}
